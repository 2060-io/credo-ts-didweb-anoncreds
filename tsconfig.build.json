{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "outDir": "./build",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "types"],
  "exclude": [
    "node_modules",
    "**/build/*",
    "**/*.test.ts",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx",
    "**/__mocks__/*.ts"
  ]
}
