{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["build"]
}
